<div class='nested-fields'>
    <div class="field">
        <%= f.label :product_id %>
        <%= f.collection_select :product_id, Product.all, :id, :name, { prompt: true } %>
    </div>
    <div class="field">
        <%= f.label :quantity %>
        <%= f.number_field :quantity %>
    </div>
    <%= link_to_remove_association "Remove Item", f, class: 'btn btn-danger' %>
    <hr>
</div>